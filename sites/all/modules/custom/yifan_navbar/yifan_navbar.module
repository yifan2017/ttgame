<?php

	/**
         * Implements hook_page_build().
         */

function yifan_navbar_page_build(&$page){
	if (user_access('access navbar') ){
		$module_path = drupal_get_path('module', 'yifan_navbar');
       		drupal_add_css($module_path . '/css/yifan.navbar.css',
		[
	  		'group' =>	CSS_THEME,
	  		'media' =>	'all',
	 		 'weight' =>	1001
		]);
	} 
}
